            <div class="row">
                <div class="col-12 col-xl-10 mb-6 mb-lg-0 mt-5">
                    <div class="card">
                        <h5 class="card-header">History your order</h5>
                        <% if(order.length) { %>
                        <div class="card-body">
                            <div class="table-responsive">
                              <table class="table">
                                <thead>
                                    <tr style="font-size: 11px;">
                                        <th scope="col">Invoiceid</th>                        
                                        <th scope="col">address</th>
                                        <th scope="col">phone</th>
                                        <th scope="col">productname</th>
                                        <th scope="col">price</th>
                                        <th scope="col">quantity</th>
                                        <th scope="col">date</th>
                                        <!-- <th width="200px">Action</th> -->
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(let i = 0; i < order.length; i++) { %>
                                        <tr>  
                                          <% if(order[i].invoiceid == checkorder && i == 0){ %>
                                            <td><%= checkorder %></td>  
                                            <% }else if(order[i].invoiceid == checkorder){ %>
                                              <td> </td>  
                                            <% }else if(order[i].invoiceid == order[i-1].invoiceid){ %>
                                              <td> </td>  
                                            <% }else{ %>
                                              <td><%= order[i].invoiceid %></td>  
                                            <% } %>                       
                                            <td><%= order[i].useraddress %></td>
                                            <td><%= order[i].userphone %></td>
                                            <td><%= order[i].productname %></td>
                                            <td><%= order[i].productprice %></td>
                                            <td ><%= order[i].productquantity %></td>
                                            <td><%= order[i].date %></td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                            </div>
                            <% } %>
                            <% if(!order.length) { %>
                                <p style="font-size: 10px;" class="text-center">No Have Any Order !! </p>
                            <% } %>
                        </div>
