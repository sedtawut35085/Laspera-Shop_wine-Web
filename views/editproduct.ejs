                                            <option value="<%= editpros[0].bodytaste %>"><%= editpros[0].bodytaste %></option>
                                            <option value="0">0</option>
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                            <option value="4">4</option>
                                            <option value="5">5</option>
                                            <option value="-">-</option>
                                          </select>  
                                        </div>
                                        <div class="col-2">
                                          <label style="margin-bottom: 10px;">finish taste:</label>
