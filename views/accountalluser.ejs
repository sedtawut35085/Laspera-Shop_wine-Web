        <main class="col-md-9 ml-sm-auto col-lg-10 px-md-4 py-4">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active" aria-current="page">Master Admin</li>
                    <li class="breadcrumb-item" aria-current="page">Manage Users</li>
                </ol>
            </nav>
            
             
            <% if(success && success.length > 0) { %>
              <div style="margin-left: -15px;" class='alert success' role ='alert'>
                <p class="inner">
                  <%= success %>
                </p>
              </div>
            <%}%>
            <h1 class="h2">Manage user</h1>
            <p>Manage user</p>
              <div class="row">
                <div class="col-12 col-xl-10 mb-6 mb-lg-0 mt-1">
                    <div class="card">
                        <h5 class="card-header">
                          <ul class="nav nav-pills w-100">
                            <li class="nav-link">Manage user</li>
                            <li class="nav-link ml-auto">
                              <input class="form-control form-control-dark" type="text" placeholder="Search for name" aria-label="Search" id='myInput' onkeyup='myFunction()'>
                          </li>
                            
                        </ul>
                        </h5>
                        <div class="card-body">
                            <div class="table-responsive">
                              <% if(infoalluser.length) { %>
                              <table class="table" id="table-big">
                                <thead>
                                  <tr>
                                    <th scope="col">username</th>
                                    <th scope="col">email</th>
                                    <th scope="col">role</th>
                                    <th scope="col">see info</th>
                                    <th scope="col">delete</th>     
                                  </tr>
                                </thead>
                                <tbody>
                                  <% for(let i = 0; i < infoalluser.length; i++) { %>
                                    <tr class='item'>
                                        <td class="name-s"><%= infoalluser[i].username %></td>
                                        <td><%= infoalluser[i].email %></td>
                                        <td>
                                          <% if( infoalluser[i].role  == 'Master Admin'){ %>
                                            <span style="margin-bottom: 5px;"><i style="color: red;" class="fas fa-crown"></i> Master role </span>
                                          <% }else{ %>
                                            <form action="/admin/updaterole?id=<%= infoalluser[i]._id %>&name=<%= infoalluser[i].username %>" method="POST">
                                              <select class="form-select" onChange="this.form.submit();" aria-label="Default select example" name="role">
                                                <% if( infoalluser[i].role  == 'Admin'){ %>
                                                  <option selected><%= infoalluser[i].role %></option>
                                                  <option value="User">User</option>
                                                <% }else{ %>
                                                <option selected>User</option>
                                                <option value="Admin">Admin</option>
                                                <% } %>
                                              </select>
                                            </form>
                                          <% } %>
                                        </td>
                                        <td>
                                          <% if( infoalluser[i].role  == 'Master Admin'){ %>
                                            <i style="color: red;" class="fas fa-ban"></i>
                                          <% }else{ %>
                                            <button  style="font-size: 10px;"class="btn btn-success" data-toggle="modal" data-target="#exampleModal2-<%= infoalluser[i]._id %>">See info</button>
                                            <% } %>
                                            <div style="top: 20%; border-radius: 25px; padding: 20px 10px;" class="modal fade" id="exampleModal2-<%= infoalluser[i]._id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                              <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                  <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel">Infomation</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                      <span aria-hidden="true">&times;</span>
                                                    </button>
                                                  </div>
                                                  <div class="modal-body">
                                                      <% if(infoalluser[i].img == null ){ %>
                                                        <img width="100px" src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/ac/No_image_available.svg/600px-No_image_available.svg.png" alt="">
                                                        <% }else{ %>
                                                          <img width="100px" src="<%= infoalluser[i].coverImagePath %>" alt="">
                                                      <% } %> 
                                                    <br>
                                                    <br>
                                                    <span>ID : </span><span style="color: #8C7741;"> <%= infoalluser[i]._id %></span>
                                                    <br>
                                                    <span>Username : </span><span style="color: #8C7741;"> "<%= infoalluser[i].username %>"</span>
                                                    <br>
                                                    <span>Email : </span><span style="color: #8C7741;"> "<%= infoalluser[i].email %>"</span>
                                                    <br>
                                                    <span>Address : </span><span style="color: #8C7741;"> "<%= infoalluser[i].address %>"</span>
                                                    <br>
                                                    <span>Phone : </span><span style="color: #8C7741;"> "<%= infoalluser[i].phone %>"</span>
                                                    <br>
                                                    <span>Role : </span><span style="color: #8C7741;"> "<%= infoalluser[i].role %>"</span>
                                                    
                                                  </div>
                                                  <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Ok</button>
                                                  </div>
                                                </div>
                                              </div>
                                            </div>
                                        </td>
                                 
                                        <td> 
                                          <% if( infoalluser[i].role  == 'Master Admin'){ %>
                                            <i style="color: red;" class="fas fa-ban"></i>
                                            <% }else{ %>
                                            <button  style="font-size: 10px;"class="btn btn-danger" data-toggle="modal" data-target="#exampleModal-<%= infoalluser[i]._id %><%= infoalluser[i].username %>">Delete</button>
                                            <% } %>
                                            <div style="top: 20%; border-radius: 25px; padding: 20px 10px;" class="modal fade" id="exampleModal-<%= infoalluser[i]._id %><%= infoalluser[i].username %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                              <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                  <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel">Confirm to Delete</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                      <span aria-hidden="true">&times;</span>
                                                    </button>
                                                  </div>
                                                  <div class="modal-body">
                                                    Are you sure to delete account : <%= infoalluser[i].username %> ?
                                                  </div>
                                                  <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                    <form action="/admin/removeuser?ids=<%= infoalluser[i]._id %>&name= <%= infoalluser[i].username %>" method="POST">
                                                    <button type="submit" class="btn btn-danger">Confirm</button>
                                                  </form>
                                                  </div>
                                                </div>
                                              </div>
                                            </div>
                                        </td>                                    
                                    </tr>
                                <% } %>            
                                </tbody>
                              </table>
                              <% } %>
                        </div>
                    </div>
                </div>       
            </div> 
        </main>
    </div>
</div>
<script>
  function myFunction() {
  var input, filter, ul, li, a, i, txtValue;
  input = document.getElementById('myInput');
  filter = input.value.toUpperCase();
  ul = document.getElementById("table-big");
  li = ul.getElementsByClassName('item');
  for (i = 0; i < li.length; i++) {
    a = li[i].getElementsByClassName("name-s")[0];
    txtValue = a.textContent || a.innerText;
    if (txtValue.toUpperCase().indexOf(filter) > -1) {
      li[i].style.display = "";
    } else {
      li[i].style.display = "none";
    }
  }
  }
  </script>
