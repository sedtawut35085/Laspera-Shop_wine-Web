            <h1 class="h2">Manage</h1>
            <p style="margin-bottom: -10px;">Manage All Products</p>
            <div class="row">
                <div class="col-12 col-xl-10 mb-6 mb-lg-0 mt-5">
                    <div class="card">
                        <h5 class="card-header">
                          <ul class="nav nav-pills w-100">
                            <li class="nav-link">Manage Products</li>
                            <li class="nav-link ml-auto">
                                <a style="font-size: 10px;" href="/account/sellproduct" class="nav-link active">Sell Product</a>
                            </li>
                        </ul>
                        </h5>
                        <div class="card-body">
                            <div class="table-responsive">
                              <table class="table">
                                <thead>
                                  <tr>
                                    <th scope="col">Image</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Category</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Selling Date</th>
                                    <th scope="col">Action</th>
                                    <th scope="col">Action</th>
                                  </tr>
                                </thead>
                                <tbody>
                                  <% for(let i = 0; i < product.length; i++) { %>
                                    <tr>
                                        <th scope="row"><img style="max-width: 70px;" src="<%= product[i].coverImagePath %>" alt="" class="ui image"></th>
                                        <td><%= product[i].name %></td>
                                        <td><%= product[i].category %></td>
                                        <td><%= product[i].price %> $</td>
                                        <td><%= product[i].quantity %></td>
                                        <td style="width: 100px;"><%= product[i].date %></td>
                                        <td> 
                                          <form action="/account/editproduct?ids=<%= product[i].name %>" method="POST">
                                          <button style="font-size: 10px;" class="btn btn-success edit" type="submit">Edit</button>
                                        </form>
                                      </td>
                                        <td>
                                          <form action="/account/removestore?ids=<%= product[i].name %>" method="POST">
                                            <button  style="font-size: 10px;" class="btn btn-danger delete" type="submit">Delete</button>
                                          </form>
                                        </td>
                                                                                    
                                    </tr>
                                <% } %>
                                  
                                </tbody>
                              </table>
                              
                            </div>
                          
                        </div>
