    <div class="card">
        <div class="card-header">
            <ul class="nav nav-pills w-100">
                <li class="nav-link">Sell Products</li>
                <li class="nav-link ml-auto">
                    <a style="font-size: 10px;" href="/account/sellproduct" class="nav-link active">Add Product</a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <% if(product.length) { %>
                <table class="table">
                    <thead>
                        <tr style="font-size: 10px;">
                            <th scope="col">Image</th>
                            <th scope="col">Name</th>
                            <th scope="col">Category</th>
                            <th scope="col">Price</th>
                            <th scope="col">Quantity</th>
                            <th  scope="col">Selling Date</th>
                            <th style="margin-right: -50px;" scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i = 0; i < product.length; i++) { %>
                            <tr>
                                <th  scope="row" class="imgpro"><img src="<%= product[i].coverImagePath %>" alt="" class="ui image"></th>
                                <td><%= product[i].name %></td>
                                <td><%= product[i].category %></td>
                                <td><%= product[i].price %> $</td>
                                <td><%= product[i].quantity %></td>
                                <td style="width: 100px;"><%= product[i].date %></td>
                                <td style="margin-left: 30px;" class="row">
                                 <div style="margin-left: -35px; margin-top: 10px;" class="col">
                                  <form action="/account/editproduct?ids=<%= product[i].name %>" method="POST">
                                    <button class="btn btn-success edit" type="submit">Edit</button>
                                  </form>
                                 </div>
                                    <div style="margin-bottom: 22px; margin-top: 10px;" class="col">
                                      <form action="/account/removestore?ids=<%= product[i].name %>" method="POST">
                                        <button class="btn btn-danger delete" type="submit">Delete</button>
                                      </form>
                                    </div>
                                  </td>                                                  
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            <% } %>
  
            <!-- if result is empty -->
            <% if(!product.length) { %>
                <p class="text-center">No Products !! </p>
            <% } %>
